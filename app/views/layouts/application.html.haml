!!!
%html
  %head
    %meta{ content: 'text/html; charset=UTF-8', 'http-equiv' => 'Content-Type' }/
    %title Slow food online
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
    %script{ src: 'https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js' }
    %script{ src: 'http://maps.google.com/maps/api/js?sensor=tru', :type => 'text/javascript'}
    %script{ src: 'https://cdnjs.cloudflare.com/ajax/libs/gmaps.js/0.4.25/gmaps.js' }

  %body
    - if current_user
      = link_to 'Sign Out', destroy_user_session_path, {method: :delete}
    %nav.top-bar.nav-desktop
      .wrap
        .top-bar-left
          = image_tag('slofo.png')
        .top-bar-right
          %ul.menu.menu-desktop
            %li
              = link_to 'Home', root_path
            %li
              = link_to 'Sign up', new_user_registration_path
            %li
              = link_to 'Sign in', new_user_session_path
            %li
              - if session[:cart_id]
                = link_to 'Checkout', cart_path(session[:cart_id]), class: 'Checkout'
            %li
              - if session[:cart_id]
                = link_to 'Cart', cart_path(session[:cart_id])
                = @cart.shopping_cart_items.count
                Items in cart
    %p.notice= notice
    %p.alert= alert
    = yield

  %footer
    .wrap.row.small-up-1.medium-up-3
      .column
        %h4 Site Map
        %hr/
        %a{:href => "#", :target => "_blank"}
          %span About Us
        %br/
        %a{:href => "#", :target => "_blank"}
          %span Contact Us
        %br/
