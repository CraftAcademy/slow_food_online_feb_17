!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title SlowFoodOnlineFeb17
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
    :css
      .top-bar {background-color: #FFA500;}
      .menu {background-color: #1F6C87;}
  %body
    / Top Bar
    %nav.top-bar.nav-desktop
      .wrap
        .top-bar-left
          %h3.site-logo Slow Food Online
        .top-bar-right
          %ul.menu.menu-desktop
            %li
              %a{:href => "#"} Registration
            %li
              %a{:href => "#"} Login

    = yield

    /Footer
    %footer
      .wrap.row.small-up-1.medium-up-3
        .column
          %h4 Useful Links
          %hr/
          %a{:href => "#", :target => "_blank"}
            %span Menu
          %br/
          %a{:href => "#", :target => "_blank"}
            %span Dishes
          %br/
        .column
          %h4 Site Map
          %hr/
          %a{:href => "#", :target => "_blank"}
            %span About Us
          %br/
          %a{:href => "#", :target => "_blank"}
            %span Contact Us
          %br/
