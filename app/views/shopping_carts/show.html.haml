%h2 Your Shopping Cart
%table.shopping-cart
  %tr
    %th Name
    %th Price
  - @cart.shopping_cart_items.each do |cart_item|
    %tr
      %td.product-name
        = cart_item.item.name
      %td.product-price
        = cart_item.item.price
        SEK
  %tr
    %th Total:
    %td
      = @cart.total
      SEK
- if current_user
  = form_tag(complete_path(cart_id: session[:cart_id]), method: 'post') do
    = submit_tag('Finalize order')
- else
  %h4 Please sign in before checkout
  = link_to 'Sign in', new_user_session_path
