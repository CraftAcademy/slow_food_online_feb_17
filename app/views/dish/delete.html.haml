.row
  .medium-8.medium-centered
    %h2 Delete dish from menu

    = form_for [@menu.restaurant, @menu, @dish], url: restaurant_menu_dish_path do |f|
      = f.label :name
      = f.text_field :name
      = f.label :price
      = f.number_field :price
      = f.label :description
      = f.text_area :description
      = f.label :category
      = f.select(:category , ['Starter','Main course','Dessert'])
      = f.submit "Delete dish", class: 'button expanded'
