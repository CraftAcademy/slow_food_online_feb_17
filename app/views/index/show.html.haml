%h2 Your Shopping History
%table.shopping-cart
  %tr
    - @cart.each do |cart_x|
      - cart_x.shopping_cart_items.each do |cart_i|
        %th
          = cart_i.item.menu.restaurant.name
          = cart_x.created_at.strftime('%Y-%m-%d')
          - if @usr == nil
            %div{class: "rest-#{cart_i.item.menu.restaurant.id}"}
              Current Rating
              = cart_i.item.menu.restaurant.rating.rating.round(2)
            %th
        %tr
          %th Name
          %th Price
          - cart_x.shopping_cart_items.each do |cart_item|
            %tr
              %td.product-name
                = cart_item.item.name
              %td.product-price
                = cart_item.item.price
                SEK
          %tr
            %th Total:
            %td
              = cart_x.total
              SEK
- @userr.distinct.pluck(:rating_id).uniq.each do |userr|
  - @rest = Rating.find_by(id: userr).restaurant
  %div{class: "rest-#{@rest.id}"}
    = @rest.name
    %br
    Current Rating
    = @rest.rating.rating.round(2)
    = form_for @rating, url: update_path(id: @rest.id),method: 'post' do |f|
      = f.select(:rating, Rating.rating_range)
      = f.submit "Rating", class: 'round button'
      %br
      %br
